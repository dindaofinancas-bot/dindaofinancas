# Configurações de Produção - Dindão Finanças
# Domínio: dindaofinancas.com.br

# URL da aplicação
APP_URL=https://app.dindaofinancas.com.br
API_URL=https://api.dindaofinancas.com.br

# Ambiente
NODE_ENV=production
PORT=5000

# Banco de dados (configurar depois no Supabase)
DATABASE_URL=postgresql://postgres:password@localhost:5432/dindao_financas

# Segurança
SESSION_SECRET=change_this_to_a_secure_random_string_in_production
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# CORS
CORS_ORIGIN=https://app.dindaofinancas.com.br

# Logging
LOG_LEVEL=info

# Features
ENABLE_WHATSAPP=true
ENABLE_API=true
ENABLE_NOTIFICATIONS=true

# Uploads
MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_DIR=./uploads

# Timezone
TZ=America/Sao_Paulo

# Versão
APP_VERSION=1.0.0